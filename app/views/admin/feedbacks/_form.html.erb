<%= form_with(model: feedback, url: feedback.new_record? ? admin_feedbacks_path : admin_feedback_path(feedback), local: true, class: "bg-dark p-4 rounded shadow") do |form| %>
  
  <% if feedback.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(feedback.errors.count, "error") %> prohibited this feedback from being saved:</h2>
      <ul>
        <% feedback.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :client_id, class: "form-label text-light" %>
    <%= form.number_field :client_id, class: "form-control bg-dark text-light border-light" %>
  </div>

  <div class="mb-3">
    <%= form.label :content, class: "form-label text-light" %>
    <%= form.text_area :content, class: "form-control bg-dark text-light border-light", rows: 5 %>
  </div>

  <div class="mb-3">
    <%= form.label :rating, class: "form-label text-light" %>
    <%= form.number_field :rating, in: 1..5, class: "form-control bg-dark text-light border-light" %>
  </div>

  <div class="actions">
    <%= form.submit "Save Feedback", class: "btn btn-success btn-lg w-100" %>
  </div>

<% end %>
