<h1 class="mb-4">Clients</h1>

<%= link_to 'New Client', new_admin_client_path, class: 'btn btn-primary mb-3' %>

<div class="table-responsive">
  <table class="table table-striped table-bordered">
    <thead class="table-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Company</th>
        <th scope="col">Image</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td><%= client.name %></td>
          <td><%= client.company %></td>
          <td><%= image_tag(client.image, class: 'img-thumbnail', size: '100x100') if client.image.present? %></td>
          <td>
            <%= link_to 'Show', admin_client_path(client), class: 'btn btn-info btn-sm' %>
            <%= link_to 'Edit', edit_admin_client_path(client), class: 'btn btn-warning btn-sm' %>
            <%= button_to 'Destroy', admin_client_path(client), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
